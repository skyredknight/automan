<!DOCTYPE html>
<html>
<head>
  <title>Auto Mantenimiento</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <%= link_to "Auto Mantenimiento", root_path %>

  <div>
    <p>
    <% if current_usuario %>
      Usuario: <%= current_usuario.email %> | <%= link_to "Logout", destroy_usuario_session_path %>
    <% else %>
      <%= link_to "Registrarse", new_usuario_registration_path %> | <%= link_to "Login", new_usuario_session_path %>
    <% end %>
    </p>
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

</body>
</html>
